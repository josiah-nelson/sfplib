{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Home Assistant",
      "type": "shell",
      "command": "supervisor_run",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Install Python Dependencies",
      "type": "shell",
      "command": "cd backend && poetry install",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Run Python Tests",
      "type": "shell",
      "command": "cd backend && poetry run pytest -v",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "group": {
        "kind": "test"
      }
    },
    {
      "label": "Run Python Linters",
      "type": "shell",
      "command": "cd backend && poetry run ruff check . && poetry run mypy . && poetry run black --check .",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Format Python Code",
      "type": "shell",
      "command": "cd backend && poetry run black .",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Build Add-on (amd64)",
      "type": "shell",
      "command": "docker build -f sfplib/Dockerfile -t local/sfplib:latest .",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Validate Add-on Config",
      "type": "shell",
      "command": "yamllint -c sfplib/.yamllint sfplib/config.yaml",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
